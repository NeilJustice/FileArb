{
   "version": "2.0.0",
   "tasks": [
   {
      "type": "shell",
      "label": "Build Debug",
      "command": "ninja",
      "args": [ "-v" ],
      "options": { "cwd": "${workspaceRoot}/Debug" },
      "problemMatcher": [ "$gcc" ],
      "group": { "kind": "build", "isDefault": true }
   },
   {
      "type": "shell",
      "label": "Build Release",
      "command": "ninja",
      "args": [ "-v" ],
      "options": { "cwd": "${workspaceRoot}/Release" },
      "problemMatcher": [ "$gcc" ]
   },
   {
      "type": "shell",
      "label": "Run Debug FileArb",
      "command": "${workspaceRoot}/Debug/FileArb/FileArb",
      "args": [ "" ],
      "problemMatcher": [ "$gcc" ]
   },
   {
      "type": "shell",
      "label": "Run Debug libFileArbTests",
      "command": "${workspaceRoot}/Debug/libFileArbTests/libFileArbTests",
      "args": [ "" ],
      "problemMatcher": [ "$gcc" ],
      "group": { "kind": "test", "isDefault": true }
   },
   {
      "type": "shell",
      "label": "Run Release FileArb",
      "command": "${workspaceRoot}/Release/FileArb/FileArb",
      "args": [ "" ],
      "problemMatcher": [ "$gcc" ]
   },
   {
      "type": "shell",
      "label": "Run Release libFileArbTests",
      "command": "${workspaceRoot}/Release/libFileArbTests/libFileArbTests",
      "args": [ "" ],
      "problemMatcher": [ "$gcc" ]
   },
   {
      "type": "shell",
      "label": "Clean Debug",
      "command": "ninja",
      "args": [ "clean" ],
      "options": { "cwd": "${workspaceRoot}/Debug" },
      "problemMatcher": [ "$gcc" ]
   },
   {
      "type": "shell",
      "label": "Clean Release",
      "command": "ninja",
      "args": [ "clean" ],
      "options": { "cwd": "${workspaceRoot}/Release" },
      "problemMatcher": [ "$gcc" ]
   },
   {
      "type": "shell",
      "label": "Compile Active File",
      "command": "/usr/bin/clang++",
      "args": [
         "-c",
         "-std=c++1z",
         "-Wall",
         "-Werror",
         "-I/code/FileArb",
         "-I/code/FileArb/libFileArb",
         "-I/code/FileArb/libFileArbTests",
         "${file}"
       ],
       "options": { "cwd": "${workspaceFolder}" },
       "problemMatcher": [ "$gcc" ]
     },
     {
      "type": "shell",
      "label": "Check Syntax Of Active File",
      "command": "/usr/bin/clang++",
      "args": [
        "-fsyntax-only",
        "-std=c++1z",
        "-I/code/FileArb",
        "-I/code/FileArb/libFileArb",
        "-I/code/FileArb/libFileArbTests",
        "${file}"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [ "$gcc" ]
   }
   ]
}
